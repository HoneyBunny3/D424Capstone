<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    android:padding="8dp">

    <!-- Confirmation Number Label -->
    <TextView
        android:id="@+id/confirmation_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Order Confirmation Number" />

    <TextView
        android:id="@+id/confirmation_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:hint="Confirmation Number" />

    <!-- Order Date Label -->
    <TextView
        android:id="@+id/order_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Order Date" />

    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:hint="Order Date" />

    <Button
        android:id="@+id/set_alert_button"
        style="@style/ShareButtonStyle"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Set Order Tracking Alert" />
</LinearLayout>