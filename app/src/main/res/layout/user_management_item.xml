<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/first_name_text_view"
        style="@style/DisplayTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="First Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit_user_button" />

    <TextView
        android:id="@+id/last_name_text_view"
        style="@style/DisplayTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Last Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_name_text_view"
        app:layout_constraintEnd_toStartOf="@id/edit_user_button" />

    <TextView
        android:id="@+id/user_email_text_view"
        style="@style/DisplayTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="User Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_name_text_view"
        app:layout_constraintEnd_toStartOf="@id/edit_user_button" />

    <TextView
        android:id="@+id/user_role_text_view"
        style="@style/DisplayTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="User Role"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_email_text_view"
        app:layout_constraintEnd_toStartOf="@id/edit_user_button"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/edit_user_button"
        style="@style/DeleteButtonStyle"
        android:layout_width="73dp"
        android:layout_height="38dp"
        android:text="Edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/delete_user_button" />

    <Button
        android:id="@+id/delete_user_button"
        style="@style/DeleteButtonStyle"
        android:layout_width="73dp"
        android:layout_height="38dp"
        android:text="Remove"
        app:layout_constraintTop_toBottomOf="@id/edit_user_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>